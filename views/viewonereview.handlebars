{{#if reviews.length}}
{{#each reviews as |review|}}
<section>
  <h2>View Review</h2>
  
  <div class="card">
    <div class="card-content">
      <div class="media">
        <!-- Book Image -->
        {{!-- <div class="media-left">
          <figure class="image is-48x48">
            <img src="{{this.image}}" alt="Book Image">
          </figure>
        </div> --}}
        <div class="media-content">
          <!-- Review Title -->
          <p class="title is-4">{{review.title}}</p>
          <!-- Review Body -->
          <p class="subtitle is-6">{{review.body}}</p>
          <!-- Review Score -->
          <p class="subtitle is-6">{{review.score}}</p>
        </div>
      </div>
      <!-- Edit and Delete buttons -->
      <div class="card">
        <footer class="card-footer">
          <a href="/reviewsedit/{{review.id}}" class="card-footer-item" id="edit-review">Edit</a>
          <a href="#" class="card-footer-item" id="delete-review" data-id="{{review.id}}">Delete</a>
        </footer>
      </div>
    </div>
  </div>
